<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gasperpintar.cardgenerator.controller.GeneratorController"
      spacing="20.0"
      stylesheets="@../css/generator.css"
      styleClass="generator-root">

    <VBox spacing="20" styleClass="generator-left-panel">

        <StackPane styleClass="card-view">
            <VBox alignment="CENTER" spacing="15">
                <Label text="%generator.upload.title" styleClass="card-label" alignment="CENTER"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="%generator.upload.file" styleClass="card-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="excelButton" text="%generator.upload.button" styleClass="nav-button"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="%generator.images.title" styleClass="card-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="imagesButton" text="%generator.images.button" styleClass="nav-button"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="%generator.template.title" styleClass="card-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="templateButton" text="%generator.template.button" styleClass="nav-button"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <VBox spacing="2">
                        <Label text="%generator.quantity.title" styleClass="card-label"/>
                        <Label text="%generator.quantity.description" styleClass="card-sub-label"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="quantityTextField" promptText="%generator.quantity.text-field" styleClass="text-field-card"/>
                </HBox>
                <Button fx:id="uploadButton" text="%generator.upload-data.button" styleClass="nav-button"/>
            </VBox>
        </StackPane>

        <StackPane styleClass="card-view">
            <VBox alignment="CENTER" spacing="15">
                <Label text="%generator.download.title" styleClass="card-label" alignment="CENTER"/>
                <HBox>
                    <Label fx:id="totalCardsLabel" styleClass="card-label"/>
                </HBox>
                <HBox spacing="15" alignment="CENTER">
                    <VBox spacing="5">
                        <Label text="%generator.cards.format" styleClass="card-label"/>
                        <ComboBox fx:id="formatComboBox" styleClass="combo-box-card" value="13x18">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="13x18"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="%generator.cards.type" styleClass="card-label"/>
                        <ComboBox fx:id="typeComboBox" styleClass="combo-box-card" value="jpg">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="jpg"/>
                                    <String fx:value="png"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                </HBox>
                <Button fx:id="downloadButton" text="%generator.cards.generate" styleClass="nav-button"/>
            </VBox>
        </StackPane>
    </VBox>

    <VBox spacing="15" styleClass="generator-right-panel" HBox.hgrow="ALWAYS" alignment="CENTER">
        <ListView fx:id="cardsListView" VBox.vgrow="ALWAYS" styleClass="card-list-view" />
    </VBox>

</HBox>
